{
  "name": "harvest4",
  "version": "1.0.0",
  "description": "Bitcoin trading bot for Bitbank exchange",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testNamePattern=\"Integration Tests\"",
    "test:performance": "jest --testNamePattern=\"Performance Testing\"",
    "test:security": "jest --testNamePattern=\"Security Testing\"",
    "test:financial": "jest --testNamePattern=\"Financial Accuracy\"",
    "test:market-sim": "jest --testNamePattern=\"Market Simulation\"",
    "test:qa": "jest --testNamePattern=\"Quality Assurance\"",
    "test:all-enhanced": "npm run test:integration && npm run test:performance && npm run test:security && npm run test:financial && npm run test:market-sim",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "quality-check": "npm run lint && npm run build && npm run test:coverage",
    "pre-commit": "npm run quality-check"
  },
  "keywords": [
    "bitcoin",
    "trading",
    "bot",
    "bitbank",
    "cryptocurrency"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "crypto": "^1.0.1",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}